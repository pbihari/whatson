<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Start</th>
    <th>Finish</th>
    <th>Description</th>
    <th>Website</th>
    <th>Venue</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Click count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.start %></td>
    <td><%= event.finish %></td>
    <td><%= event.description %></td>
    <td><%= event.website %></td>
    <td><%= event.venue %></td>
    <td><%= event.city %></td>
    <td><%= event.postcode %></td>
    <td><%= event.click_count %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

